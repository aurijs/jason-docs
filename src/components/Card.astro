---
import { Card as StarlightCard } from "@astrojs/starlight/components";
export type Props = Parameters<typeof StarlightCard>[0];
---

<div class="landing-card">
  <StarlightCard {...Astro.props}><slot /></StarlightCard>
</div>

<style>
  .landing-card {
    --card-bg: oklch(0.13 0 0 / 0.3);
    display: contents;
    color: var(--sl-color-gray-1);
  }

  :global(:root[data-theme="light"]) .landing-card {
    --card-bg: oklch(1 0 0 / 0.8);
  }

  .landing-card :global(.card) {
    overflow: hidden;
    background-color: var(--card-bg);
    position: relative;
  }

  .landing-card :global(.card > *) {
    z-index: 1;
  }

  .landing-card :global(.card::before) {
    content: "";
    position: absolute;
    top: 0;
    inset-inline-end: 0;
    width: 6.25rem;
    height: 6.25rem;
    background: var(--landing-card-accent);
    border-radius: 100%;
    filter: blur(4.25rem);
    opacity: 0.33;
  }

  .landing-card :global(.card) {
    --sl-card-bg: var(--sl-color-accent-low);
    --sl-card-border: var(--sl-color-accent-high);
    --landing-card-accent: var(--sl-color-accent);
  }

  .landing-card:nth-child(2n) :global(.card) {
    --sl-card-bg: var(--sl-color-accent-low);
    --sl-card-border: var(--sl-color-accent-high);
    --landing-card-accent: var(--sl-color-accent);
  }
</style>
